kind: Deployment
apiVersion: apps/v1
metadata:
  name: fix-acceptor-kafka
  labels:
    app: fix-acceptor-kafka
    app.kubernetes.io/component: fix-acceptor-kafka
    app.kubernetes.io/instance: fix-acceptor-kafka
    app.kubernetes.io/name: fix-acceptor-kafka
    app.kubernetes.io/version: 1.0.0-SNAPSHOT
    app.openshift.io/runtime: quarkus
spec:
  replicas: 1
  selector:
    matchLabels:
      deployment: fix-acceptor-kafka
  template:
    metadata:
      labels:
        deployment: fix-acceptor-kafka
    spec:
      containers:
        - name: fix-acceptor-kafka
          image: fix-acceptor-kafka:latest
          ports:
            - containerPort: 8080
              protocol: TCP
          env:
            - name: JAVA_OPTS_APPEND
              value: '-Xms4096m -Xmx4096m'
            - GC_CONTAINER_OPTIONS
              value: '-XX:+UseG1GC'
          resources:
            limits:
              cpu: '8'
              memory: 12Gi
            requests:
              cpu: '8'
              memory: 12Gi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: IfNotPresent
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
