kind: Deployment
apiVersion: apps/v1
metadata:
  name: terminal
  labels:
    app: terminal
    app.kubernetes.io/component: terminal
    app.kubernetes.io/instance: terminal
    app.kubernetes.io/name: terminal
    app.kubernetes.io/version: 1.0.0-SNAPSHOT
    app.openshift.io/runtime: quarkus
spec:
  replicas: 1
  selector:
    matchLabels:
      deployment: terminal
  template:
    metadata:
      creationTimestamp: null
      labels:
        deployment: terminal
    spec:
      volumes:
        - name: application-config
          configMap:
            name: terminal
            items:
              - key: application.properties
                path: application.properties
            defaultMode: 420
      containers:
        - name: terminal
          image: fix-iniciator:latest
          ports:
            - containerPort: 8080
              protocol: TCP
          env:
            - name: JAVA_OPTS_APPEND
              value: '-Xms4096m -Xmx4096m'
            - GC_CONTAINER_OPTIONS
              value: '-XX:+UnlockExperimentalVMOptions -XX:+UseZGC'
          resources:
            limits:
              cpu: '1'
              memory: 5Gi
            requests:
              cpu: 200m
              memory: 512Mi
          volumeMounts:
            - name: application-config
              readOnly: true
              mountPath: /deployments/config
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: IfNotPresent
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
