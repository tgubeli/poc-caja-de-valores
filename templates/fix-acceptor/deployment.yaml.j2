kind: Deployment
apiVersion: apps/v1
metadata:
  name: fix-acceptor
  labels:
    app: fix-acceptor
    app.kubernetes.io/component: fix-acceptor
    app.kubernetes.io/instance: fix-acceptor
    app.kubernetes.io/name: fix-acceptor
    app.kubernetes.io/version: 1.0.0-SNAPSHOT
    app.openshift.io/runtime: quarkus
spec:
  replicas: 1
  selector:
    matchLabels:
      deployment: fix-acceptor
  template:
    metadata:
      labels:
        deployment: fix-acceptor
    spec:
      volumes:
        - name: application-config-acceptor
          configMap:
            name: fix-acceptor-config
            items:
              - key: application.properties
                path: application.properties
            defaultMode: 420
      containers:
        - name: fix-acceptor
          image: fix-acceptor:latest
          ports:
            - containerPort: 8080
              protocol: TCP
          env:
            - name: JAVA_OPTS_APPEND
              value: '-Xms4096m -Xmx4096m'
            - name: GC_CONTAINER_OPTIONS
              value: '-XX:+UseG1GC'
          resources:
            limits:
              cpu: '8'
              memory: 12Gi
            requests:
              cpu: '8'
              memory: 12Gi
          volumeMounts:
            - name: application-config-acceptor
              readOnly: true
              mountPath: /deployments/config
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: IfNotPresent
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
